<p id="notice"><%= notice %></p>

<%= form_tag(pictures_path, :method => "get") do %>
<%= text_field_tag :search, nil, :placeholder => "Search Pictures by Artist" %>
<%= submit_tag "search" %>
<% end %>


<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.website %></td>
        <td><%= artist.desc %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
