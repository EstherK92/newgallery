<p id="notice"><%= notice %></p>

<%= form_tag(pictures_path, :method => "get") do %>
<%= text_field_tag :search, nil, :placeholder => "Search Pictures by Name" %>
<%= submit_tag "search" %>
<% end %>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Width</th>
      <th>Height</th>
      <th>Price</th>
      <th>Artist</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.name %></td>
        <td><%= picture.width %></td>
        <td><%= picture.height %></td>
        <td><%= picture.price %></td>
        <td><%= picture.artist %></td>
        <td><%= picture.desc %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
